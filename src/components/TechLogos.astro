---
import { Icon } from "astro-icon/components";
const icons = [
  "TypeScript",
  "JavaScript",
  "React",
  "HTML5",
  "Astro",
  "CSS",
  "TailwindCSS",
  "Ubuntu",
  "Storybook",
  "SQLite",
  "Knexjs",
  "Expressjs",
  "Nodejs",
  "Git",
  "Github",
  "Figma",
  "Canva",
  "Jenkins",
  "Docker",
  "PostgreSQL",
  "Nextjs",
  'Strapi',
  'Vercel'
];
---

<div class="overflow-hidden py-4 sm:py-6 px-8 md:px-40 mt-0 mb-8 lg:mx-60 mx-12 " style="padding-top: 3rem;">
  <div class="relative w-full">
    <div class="flex w-fit animate-marquee gap-4 items-center">
      {icons.concat(icons).map((icon) => (
        <button
          class="group relative p-2 bg-re text-lightGrey hover:brightness-105 hover:scale-125 transition-all duration-300"
          aria-label={icon}
        >
          <Icon
            name={icon}
         
            class={`text-2xl sm:text-5xl text-lightGrey`}
          />
          <span
            class="absolute bottom-full mb-2 left-1/2 -translate-x-1/2 whitespace-nowrap rounded bg-gray-800 px-2 py-1 text-xs text-white opacity-0 group-hover:opacity-100 transition-opacity duration-300 z-10"
          >
            {icon}
          </span>
        </button>
      ))}
    </div>
  </div>
</div>

