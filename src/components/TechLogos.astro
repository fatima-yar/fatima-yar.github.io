---
import { Icon } from "astro-icon/components";

const icons = [
  "tsicon",
  "js",
  "reacticon",
  "html5",
  "astro",
  "cssicon",
  "tailwindicon",
  "ubento",
  "storybook",
  "sqliteicon",
  "knexicon",
  "express",
  "nodeicon",
  "git",
  "github",
  "figma",
  "canva",
  "jenkins",
  "docker",
  "postgres",
];
---


<div class="overflow-hidden shadow-sm pt-28 px-8 md:px-20 lg:px-40">
  <div class="marquee-content flex flex-wrap gap-2 items-center justify-center"> 
    {icons.map((icon) => (
      <button 
        class="p-2 text-lightGrey hover:brightness-105 hover:scale-125 transition-all duration-300 animate-spinOnce"
        aria-label={icon}
      >
        <Icon 
          name={icon} 
          class={`text-${icon === "jenkins" ? "6xl" : "5xl"} text-lightGrey `} 
        />
      </button>
    ))}
  </div>
</div>

